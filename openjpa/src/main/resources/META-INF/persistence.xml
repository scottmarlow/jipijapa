<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="testpu" transaction-type="RESOURCE_LOCAL">
    <class>org.jipijapa.test.eclipselink.Employee</class>
    <properties>
        <property name="openjpa.ConnectionDriverName" value="org.hsqldb.jdbc.JDBCDriver"/>
        <property name="openjpa.ConnectionURL" value="jdbc:hsqldb:mem:tests"/>

        <property name="openjpa.ConnectionUserName" value="sa"/>
        <property name="openjpa.ConnectionPassword" value=""/>

        <property name="openjpa.Log" value="DefaultLevel=TRACE, Tool=TRACE"/>

<!--         <property name="openjpa.InitializeEagerly" value="true"/> 
-->
        <property name="openjpa.RuntimeUnenhancedClasses" value="supported"/>

        <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(SchemaAction='drop,add')"/>

    </properties>
  </persistence-unit>

</persistence>

